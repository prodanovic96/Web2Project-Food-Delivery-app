@{
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Proizvoid</title>
    <script>
        function Delete(url) {
            swal({
                title: "Da li ste sigurni da zelite da obrisete ovaj proizvod?",
                icon: "warning",
                buttons: true,
                dangerMode: true
            }).then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        type: "DELETE",
                        url: url,
                        success: function (data) {
                            if (data.success) {
                                document.location.reload(true);
                                toastr.success(data.message);
                            }
                            else {
                                document.location.reload(true);
                                toastr.error(data.message);
                            }
                        }
                    });
                }
            });
        }
    </script>
</head>
    <body>
        <div class="container row p-0 m-0">
            <div class="col-6">
                <h2 class="text-info">Proizvodi</h2>
            </div>
            <div class="col-3 offset-3">
                <a asp-action="DodajProizvod" asp-controller="Administrator" class="btn btn-info form-control text-white">
                    Dodaj proizvod
                </a>
            </div>
            <div class="col-12 border p-3">
                <table class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr align="center">
                            <th>Naziv</th>
                            <th>Cena</th>
                            <th>Sastojci</th>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.Proizvodi.Count != 0)
                        {
                            foreach (var item in ViewBag.Proizvodi)
                            {
                                <tr align="center">
                                    <td>@item.Naziv</td>
                                    <td>@item.Cena</td>
                                    <td>@item.Sastojci</td>
                                    <td><img src="@item.ImagePath" height="100" width="100" asp-append-version="true" /></td>
                                    <td>
                                        <form method="post" action="~/Administrator/IzmeniProizvod?id=@item.Id">
                                            <input class="btn btn-warning text-white" type="submit" value="Izmeni" />
                                        </form>
                                    </td>
                                    <td>
                                        <a class="btn btn-danger text-white" onclick=Delete('/Administrator/ObrisiProizvod?id=@item.Id')>Obrisi</a>
                                    </td>
                                </tr>

                            }
                        }
                        else
                        {
                            <tr>
                                <td align="center" colspan="6"><label>U sistemu nema ni jedan proizvod!</label></td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </body>
</html>