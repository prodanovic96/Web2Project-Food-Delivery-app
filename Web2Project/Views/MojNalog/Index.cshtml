@{
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Moj Nalog</title>
    </head>
    <body>
        @if (ViewBag.AlertMessage != null)
        {
            if (ViewBag.Uspesno)
            {
                <script type="text/javascript">
                    window.onload = function () {
                        toastr.success("@ViewBag.AlertMessage");
                    };
                </script>
            }
            else
            {
                <script type="text/javascript">
                    window.onload = function () {
                        toastr.error("@ViewBag.AlertMessage");
                    };
                </script>
            }
        }
        <div class="row">
            <div class="col-3">
                <h2 class="text-info">Licni podaci</h2>
            </div>
            <div class="col-sm-6"></div>
            <div class="col-sm-3">
                <img src="@ViewBag.korisnik.ImagePath" height="100" width="100" asp-append-version="true" />
            </div>
        </div>
        <br />
        <h4><a href="~/MojNalog/LicniPodaci">Promena licnih podataka</a></h4>
        <h5>@ViewBag.korisnik.KorisnickoIme, @ViewBag.korisnik.Ime @ViewBag.korisnik.Prezime, @ViewBag.korisnik.Adresa</h5> <br />

        @if (!ViewBag.korisnik.Google)
        {
            <h4><a href="~/MojNalog/Lozinka">Promena lozinke</a></h4> <br />

            <h4><a href="~/MojNalog/Email">Promena E-mail adrese</a></h4>
            <h5>@ViewBag.korisnik.Email</h5>

        }
    </body>
</html>
