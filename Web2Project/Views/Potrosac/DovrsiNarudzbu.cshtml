<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dovrsi narudzbu</title>

    <script>
        var adresa = true;

        function AdresaEmpty() {
            if ($("#Adresa").val() == "") {
                $("#Status1").html('<font color="Red">Ovo polje mora biti popunjano!</font>');
                $("#Adresa").css("border-color", "Red");
                adresa = false;
            } else {
                $("#Status1").html('');
                $("#Adresa").css("border-color", "lightgray");
                adresa = true;
            }
        }

        function validateForm() {
            return adresa;
        }
    </script>

    <style>
        p.tekstic {
            color: grey;
        }

        div.row {
            display: flex;
            align-items: center;
        }
    </style>
</head>
    <body>
        <h2 class="text-info">Dovrsite narudzbu:</h2>
        <br />
        <form method="post" action="~/Potrosac/NarudzbaPotvrdjena" onsubmit="return validateForm()">
            <div class="form-group">
                <div class="row">
                    <label class="control-label col-sm-2">Adresa dostave:</label>
                    <div class="col-sm-4">
                        <input class="form-control" type="text" value="@ViewBag.korisnik.Adresa" onchange="AdresaEmpty()" id="Adresa" name="Adresa" />
                    </div>
                    <label class="col-sm-4" id="Status1"></label>
                </div>
                <div class="row">
                    <label class="col-sm-2"></label>
                    <div class="col-sm-4">
                        <p class="tekstic"><i>U formatu adresa i broj, grad, postanski broj</i></p>
                    </div>
                </div>
                <br />
                <div class="row">
                    <label class="control-label col-sm-2">Komentar:</label>
                    <div class="col-sm-4">
                        <textarea class="form-control" name="Komentar" id="Komentar" style="font-family:sans-serif;font-size:1.2em;"></textarea>
                    </div>
                </div>
                <br />
                <div class="row">
                    <label class="control-label col-sm-5">Ukupna cena: @ViewBag.korpa.Cena dinara</label>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-3">
                        <input class="btn btn-primary" type="submit" value="Potvrdi narudzbu" />
                    </div>
                </div>
            </div>
        </form>
    </body>
</html>